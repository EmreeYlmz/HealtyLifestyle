<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingEnd="10dp"
    android:paddingStart="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/profilee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tkp_kullaniciadi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        tools:text="emre"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/photo_image"
        app:layout_constraintStart_toEndOf="@id/photo_image"
        app:layout_constraintTop_toTopOf="@id/photo_image"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/adsoyad_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="emre"
        app:layout_constraintStart_toStartOf="@id/tkp_kullaniciadi"
        app:layout_constraintTop_toBottomOf="@id/tkp_kullaniciadi" />

    <Button
        android:id="@+id/tkp_btn"
        style="@style/Base.CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="follow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tkp_kullaniciadi" />


</androidx.constraintlayout.widget.ConstraintLayout>